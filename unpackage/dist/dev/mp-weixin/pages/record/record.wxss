
.content {
	/* background: -webkit-linear-gradient(top, #E5EED3, white); */
	padding: 0rpx;
	margin: 0rpx;
}
.uni-comment {
	padding: 24rpx 24rpx;
	display: flex;
	flex-grow: 1;
	flex-direction: column;
}
.uni-comment-list {
	flex-wrap: nowrap;
	padding: 10rpx 0;
	margin: 10rpx 0;
	width: 100%;
	display: flex;
}
.uni-comment-face {
	margin-right: 20rpx;
}
.uni-comment-body {
	width: 100%;
}
.uni-comment-top {
	line-height: 1.5em;
	justify-content: space-between;
}
.uni-comment-top text {
	color: #FBDA95;
	font-size: 24rpx;
}
.uni-comment-content {
	line-height: 1.6em;
	font-size: 28rpx;
	padding: 8rpx 0;
}
.messagepic {
	width: 200rpx;
	height: 200rpx;
}
.messagepic image{
	width: 100%;
	height: 100%;
}
.uni-comment-date {
	line-height: 38rpx;
	flex-direction: row;
	justify-content: space-between;
	display: flex !important;
	flex-grow: 1;
}
.uni-comment-date view {
	color: #666666;
	font-size: 24rpx;
	line-height: 38rpx;
}

