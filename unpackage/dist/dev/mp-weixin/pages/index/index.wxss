.content {
  background: -webkit-linear-gradient(top, #E5EED3, white);
  height: 100%;
  width: 100%;
  padding: 0rpx;
  margin: 0rpx;
}
.wrap {
  padding: 24rpx;
}
.wrap .u-row {
  margin: 40rpx 0;
}
.wrap .demo-layout {
  height: 80rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 80rpx;
  background: #F1E6A7;
  color: gray;
}
.LeaveMessage {
  padding-inline: 50rpx;
}
.LeaveMessage .img {
  height: 200px;
  width: 200px;
}
.LeaveMessage .information {
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
}
.LeaveMessage .information .ubutton {
  float: right;
}
.LeaveMessage .information .UserName {
  font-size: 18px;
  padding-left: 24rpx;
  font-weight: bold;
  bottom: 0rpx;
}
.LeaveMessage .information .Signature {
  padding-left: 24rpx;
  color: gray;
}
.LeaveMessage .information .hiddenInput {
  display: none;
}
.LeaveMessage .editmessage {
  margin-top: 24rpx;
  height: 100%;
  width: 100%;
  border-radius: 20px;
  background: -webkit-linear-gradient(top, #F1E6A7, white);
}
.LeaveMessage .editmessage .showpic ._img {
  width: 200rpx;
  height: 200rpx;
  padding: 24rpx;
}
.LeaveMessage .editmessage textarea {
  padding: 24rpx;
  height: 150rpx;
}
.LeaveMessage .editmessage button {
  background-color: #FBDA95;
  color: #9a9a9a;
  border: 0rpx;
}
.comment {
  padding-inline: 50rpx;
  padding-block: 30rpx;
}
.comment .top {
  display: flex;
}
.comment .top image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f2f2f2;
}
.comment .top .name {
  padding-left: 24rpx;
  line-height: 64rpx;
}
.comment .content {
  height: 300rpx;
  background: -webkit-linear-gradient(top, #CDE1A7, white);
  border-radius: 20px;
  margin-top: 15rpx;
  padding: 18rpx;
}
.showtips {
  height: 300rpx;
  width: 100%;
  display: flex;
  color: #9a9a9a;
}
.showtips view {
  margin: auto;
}

